<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => false, :id => "user-registration" }) do |f| %>
  <%= devise_error_messages! %>


  <p><%= f.label :email %><br /><%= f.text_field :email %></p>
  <p><%= f.label :password %><br /><%= f.password_field :password %></p>
  <p><%= f.label :password_confirmation %><br /><%= f.password_field :password_confiromation %></p>


  <p><%= f.submit "Sign up" %></p>
<% end %>

